.nav_main  scroll-view{
  white-space: nowrap;
  border-top: 1px solid #F5F5F5;
  border-bottom: 1px solid #F5F5F5;
}
.navitem {
  width: 30px;
  padding: 5px 10px;
  display: inline-block;
}
.navitem.active {
  border-bottom: 1px solid #C71585;
}
.slider swiper {
  margin-top: 5px;
  border-radius: 3px;
  overflow: hidden;
  height: 220rpx;
}
swiper-item {
  padding: 0;
  height: 100%;
  width: 100%; 
}
.slider image {
  width: 100%;
  height: 100%;
}
.play_video {
  width: 100%;
}
.video_block {
  width: 48%;
  display: inline-block;
  margin: 5rpx;
  overflow: hidden;
  border-radius: 5px;
}
.video_block .video {
  width: 100%;
  position: relative;
}
.video_block image{
  width: 100%;
}
.video_desc {
  white-space: normal;
  word-break: initial;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow:ellipsis;
  font-size: 12px;
  color: #cdcdcd;
}
.video_desc:hover {
  text-decoration: underline;
}
.play_count {
  position: absolute;
  left: 5px;
  bottom: 8px;
  color: #F5F5F5;
  font-size: 12px;
}
.play_comment {
  position: absolute;
  bottom: 8px;
  right: 5px;
  color: #F5F5F5;
  font-size: 12px;
}
